{% set menu_items = get_menu_items(settings.main_menu) %}

<!-- Main Header -->
<!-- Main Header -->
<header class="bg-[#1a1a1a] border-b border-gray-800 sticky top-0 z-50 shadow-lg">
  <div class="px-4 ml-auto mr-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16"> 
      <!-- Logo -->
      <div class="flex items-center gap-3">
        <div class="bg-red-600 p-1.5 rounded-lg">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
        </div>
        <div class="flex flex-col">
          <h1 class="text-xl font-bold leading-none text-white">RifasPro</h1>
          <p class="text-[10px] text-gray-400 leading-none mt-0.5">Tu suerte comienza aquí</p>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <nav class="items-center hidden gap-6 lg:flex!">
        <a href="#" class="text-sm font-medium text-white transition-colors hover:text-red-500">
          Inicio
        </a>

        <!-- Rifas Dropdown -->
        <div class="relative group">
          <button class="flex items-center gap-1 text-sm font-medium text-white transition-colors hover:text-red-500">
            Rifas
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-48 bg-[#1a1a1a] border border-gray-800 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors first:rounded-t-lg">
              Rifas Activas
            </a>
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors">
              Próximas Rifas
            </a>
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors">
              Rifas Finalizadas
            </a>
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors last:rounded-b-lg">
              Ganadores
            </a>
          </div>
        </div>

        <!-- Categorías Dropdown -->
        <div class="relative group">
          <button class="flex items-center gap-1 text-sm font-medium text-white transition-colors hover:text-red-500">
            Categorías
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-48 bg-[#1a1a1a] border border-gray-800 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors first:rounded-t-lg">
              Electrónicos
            </a>
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors">
              Vehículos
            </a>
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors">
              Viajes
            </a>
            <a href="#" class="block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors last:rounded-b-lg">
              Efectivo
            </a>
          </div>
        </div>

        <a href="#" class="text-sm font-medium text-white transition-colors hover:text-red-500">
          Cómo Funciona
        </a>
        <a href="#" class="text-sm font-medium text-white transition-colors hover:text-red-500">
          Contacto
        </a>
      </nav>

      <!-- Cart Button -->
      <div class="items-center hidden gap-3 !lg:flex">
        
        <button class="px-5 py-2 text-sm font-medium text-white transition-colors bg-red-600 rounded-lg hover:bg-red-700">
          Mis Boletos
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="p-2 text-white lg:hidden">
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="close-icon" class="hidden w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden py-4 border-t border-gray-800 lg:hidden">
      <div class="flex flex-col gap-2">
        <a href="#" class="py-2 text-white transition-colors hover:text-red-500">
          Inicio
        </a>

        <!-- Rifas Mobile Submenu -->
        <div>
          <button data-submenu="rifas" class="flex items-center justify-between w-full py-2 text-white transition-colors submenu-toggle hover:text-red-500">
            Rifas
            <svg class="w-4 h-4 transition-transform chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="flex-col hidden gap-2 pl-4 mt-2 submenu-content">
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Rifas Activas
            </a>
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Próximas Rifas
            </a>
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Rifas Finalizadas
            </a>
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Ganadores
            </a>
          </div>
        </div>

        <!-- Categorías Mobile Submenu -->
        <div>
          <button data-submenu="categorias" class="flex items-center justify-between w-full py-2 text-white transition-colors submenu-toggle hover:text-red-500">
            Categorías
            <svg class="w-4 h-4 transition-transform chevron-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="flex-col hidden gap-2 pl-4 mt-2 submenu-content">
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Electrónicos
            </a>
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Vehículos
            </a>
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Viajes
            </a>
            <a href="#" class="py-1 text-gray-400 transition-colors hover:text-red-500">
              Efectivo
            </a>
          </div>
        </div>

        <a href="#" class="py-2 text-white transition-colors hover:text-red-500">
          Cómo Funciona
        </a>
        <a href="#" class="py-2 text-white transition-colors hover:text-red-500">
          Contacto
        </a>

        <div class="flex gap-2 mt-4">
          <button class="flex-1 px-4 py-2 font-medium text-white transition-colors bg-red-600 rounded-lg hover:bg-red-700">
            Mis Boletos
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
