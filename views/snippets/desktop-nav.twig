<nav class="items-center hidden gap-6 lg:flex!">
	{% for item in menu_items %}
		{% if item.children == false %}
			<a href="{{ item.link }}" class="cursor-pointer text-sm font-medium text-white transition-colors hover:text-red-500">
				{{ item.title }}
			</a>
		{% else %}
			<!-- Rifas Dropdown -->
			<div class="relative group">
				<button class="flex items-center gap-1 text-sm font-medium text-white transition-colors hover:text-red-500">
					{{ item.title }}
					<svg class="w-3 h-3" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
					</svg>
				</button>
				<div class="absolute top-full left-0 mt-2 w-48 bg-[#1a1a1a] border border-gray-800 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
					{% for child in item.children %}
						<a href="{{ child.link }}" class="cursor-pointer block px-4 py-2.5 text-sm text-gray-300 hover:bg-red-600 hover:text-white transition-colors first:rounded-t-lg">
							{{ child.title }}
						</a>
					{% endfor %}
				</div>
			</div>
		{% endif %}
	{% endfor %}
</nav>
